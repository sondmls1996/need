<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.needfood.kh.More.History.HistoryDetail">

    <include
        android:id="@+id/th"
        layout="@layout/toolbar"></include>

    <LinearLayout
        android:id="@+id/shiplo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/where"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.needfood.kh.SupportClass.VerticalScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/shiplo"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/th"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include layout="@layout/info"></include>

            <include layout="@layout/deliif"></include>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <include layout="@layout/orif"></include>
        </LinearLayout>
    </com.needfood.kh.SupportClass.VerticalScrollview>

</RelativeLayout>

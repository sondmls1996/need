<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.needfood.kh.More.History.HistoryDetail">
    <include
        layout="@layout/toolbar"
        android:id="@+id/th"
        ></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/shiplo"
        android:orientation="vertical"
        android:background="@color/red"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:text="@string/where"/>
    </LinearLayout>
    <com.needfood.kh.SupportClass.VerticalScrollview
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/th"
        android:layout_above="@id/shiplo"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
            layout="@layout/orif"
            ></include>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <android.support.v7.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:cardBackgroundColor="@color/white"

            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        android:padding="5dp"
                        android:text="@string/shipin"
                        android:textColor="@color/white" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"

                            android:textSize="16sp"
                            android:text="@string/timeship"
                            android:textColor="@color/black"
                            android:layout_weight="3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/retime"
                            android:layout_margin="3dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"

                            android:text="@string/shipmn"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_weight="3"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/shipmn"
                            android:layout_margin="3dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"/>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </com.needfood.kh.SupportClass.VerticalScrollview>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:id="@+id/namemn"
            android:layout_marginBottom="5dp"
            android:text="Fish"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/mnmn"
                android:textStyle="bold"
                android:text="180.000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="/"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unitmn"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="1kg"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray2"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:text="180.000/1kg"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray2"
                android:layout_marginRight="7dp"
                android:textStyle="bold"
                android:text="Quanlity"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"

                android:layout_gravity="center_vertical"
                android:src="@drawable/plustb"
                android:background="@color/gray"
                />
            <EditText
                android:layout_width="100dp"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:background="@drawable/commentedt"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="5dp"
                android:layout_height="20dp"
                android:src="@drawable/removeb"
                android:layout_gravity="center_vertical"
                android:background="@color/gray"></ImageView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:maxHeight="100dp"
            android:src="@drawable/bg"
            android:id="@+id/imgmn"
            android:scaleType="centerCrop"/>

    </LinearLayout>


</LinearLayout>
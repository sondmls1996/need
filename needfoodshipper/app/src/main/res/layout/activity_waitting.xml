<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nf.vi.needfoodshipper.MainClass.NewDealActivity"
    tools:showIn="@layout/app_bar_main">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/SwipeRefreshwaitting"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvwaitting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/my_swipe_button"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp"></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>



</RelativeLayout>
